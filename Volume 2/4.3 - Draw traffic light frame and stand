# Task 1: Run the code and resolve the error.
# Task 2: Draw a traffic light stand.

import turtle

#draw moon:
turtle.bgcolor("black")
turtle.penup()
turtle.goto(180, 180)
turtle.pendown()
turtle.color("white")
turtle.begin_fill()
turtle.circle(25)
turtle.end_fill()

#draw stars:
#star 1
turtle.penup()
turtle.goto(40, 180)
turtle.pendown()
turtle.color("yellow")
turtle.begin_fill()
for i in range(5):
    turtle.forward(20)   
    turtle.right(144)
turtle.end_fill()

#star 2
turtle.penup()
turtle.goto(80, 220)
turtle.pendown()
turtle.color("yellow")
turtle.begin_fill()
for i in range(5):
    turtle.forward(20)   
    turtle.right(144)
turtle.end_fill()

#star 3
turtle.penup()
turtle.goto(250, 160)
turtle.pendown()
turtle.color("yellow")
turtle.begin_fill()
for i in range(5):
    turtle.forward(20)   
    turtle.right(144)
turtle.end_fill()

#draw traffic light frame and stand:
turtle.penup()
turtle.goto(-35, -100)
turtle.pendown()
turtle.color("dark grey")
turtle.begin_fill()
for i in range(2):
turtle.forward(100)
turtle.left(90)
turtle.forward(200)
turtle.left(90)
turtle.end_fill()


# Traffic light stand
turtle.width(15)






turtle.width(0)
turtle.color('dark grey')
turtle.hideturtle()

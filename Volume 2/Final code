import turtle

shape = input("Enter shape to draw (square / circle): ")

if shape == "square":
    side = int(input("Enter the side length: "))
    for i in range(4):
        turtle.forward(side)
        turtle.right(90)
elif shape == "circle":
    radius = int(input("Enter the radius: "))
    turtle.circle(radius)
else:
    print("Invalid shape!")
